doctype html
html
  head
    title Aurinsk
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css')
    link(rel='stylesheet' href='/stylesheets/index-style.css')
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js")
  body
    nav.navbar.navbar-expand-lg.navbar-light
      .container-fluid
        img.navbar-brand.img-fluid(src="/images/2200x600logo_new.png")
        .navbar-nav
          if (user)
            a.btn.btn-primary(role='button' href="/dashboard") Dashboard
          else
            button.btn.btn-primary(type='button' id="loginButton" data-bs-toggle="modal" data-bs-target="#loginModal") Login

    #mainContent.d-flex.flex-column.min-vh-100.justify-content-center.align-items-center
      h1.display-1.font-weight-bold The next generation of Minecraft server monitoring
      p Join the waiting list for our alpha testing
      form(id="waitingList")
        input#waitingListEmail.form-control.me-2.form-control-lg(type='email' name='email' placeholder='Enter your email address' aria-label='Search' required)
        .mb-3.form-check
          input.form-check-input(type="checkbox" id="privacyPolicyCheck" required)
          label.form-check-label(for="privacyPolicyCheck") You agree to our privacy policy
        button#joinWaitingList.btn.btn-outline-primary(type='submit') Join the waiting list

    #loginModal.modal.fade(tabindex='-1' aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            h5#exampleModalLabel.modal-title Login
            button.bi.bi-x-lg(type='button' data-bs-dismiss='modal' aria-label='Close')
          .modal-body
            form(method="post" action="/login")
              .mb-3
                label.form-label Email Address
                input#username.form-control(type='text' name='email' placeholder='Email' required)
              .mb-3
                label.form-label Password
                input#password.form-control(type='password' name='password' placeholder='Password' required)
              if invalid
                .mb-3
                  .alert.alert-danger(role="alert") Your password is incorrect

              .modal-footer.d-block
                button.btn.btn-primary.float-end(type='submit') Submit

    if verified
      .modal.fade(tabindex='-1' id='verified')
        .modal-dialog
          .modal-content
            .modal-body
              p You have been successfully added to the waiting list
            .modal-footer
              button.btn.btn-primary(type='button' data-bs-dismiss='modal') Ok

    script(src='/js/bootbox.all.min.js')
    script(src="js/index-front.js")
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')